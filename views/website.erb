<div class="notes"></div>
<div class="container">
    <a class="open" href="javaScript:void(0);" onclick="friendsOpen()">Friends</a> 
    <a class="logout" href="/">Logout</a> 
    <div class="friends">
        <a href="javaScript:void(0);" onclick="friendsClose()">Close</a>
        <div class="list">
            <% a.each do |friend| %>
                <a href="javaScript:void(0);" onclick="chatToggle(this)"><%= friend[0] %></a>
            <% end %>
        </div>
    </div>
    <div class="add">
        <form action="/add" method="POST" autocomplete="off">
            <input type="text" name="name">
            <input type="submit" value="Add Friend">
        </form>
    </div>
    </div>
    <div class="chat none">
        <div class="header">

        </div>
        <div class="window">

        </div>
        <form class="send" action="/message" method="POST" autocomplete="off">
            <input type="text" name="message" placeholder="Type here">
            <input type="submit" value="Send">
        </form>
    </div>
</div>
